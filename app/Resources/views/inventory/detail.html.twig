{% extends 'base-inventory.html.twig' %}
            
{% block body %}

    <div class="row">
        <div class="col-md-12">
            <div class="box box-primary">

                <div class="box-header">
                    <h3 class="box-title">DETAIL INVENTORY</h3>
                </div>
                <div class="box-body table-responsive">

                    <strong><i class="fa fa-book margin-r-5"></i>Nama</strong>
                    <p class="text-muted">
                        {{ inventory.nama }}
                    </p>
                    <hr/>

                    <strong><i class="fa fa-book margin-r-5"></i>Kuantitas Per Unit</strong>
                    <p class="text-muted">
                        {{ inventory.quantityPerUnit }}
                    </p>
                    <hr/>

                    <strong><i class="fa fa-book margin-r-5"></i>Harga Per Unit</strong>
                    <p class="text-muted">
                        {{ inventory.unitPrice }}
                    </p>
                    <hr/>

                    <strong><i class="fa fa-book margin-r-5"></i>Stok Unit</strong>
                    <p class="text-muted">
                        {{ inventory.unitsInStock }}
                    </p>
                    <hr/>

                    <strong><i class="fa fa-book margin-r-5"></i>Reorder Stok Unit</strong>
                    <p class="text-muted">
                        {{ inventory.unitsOnOrder }}
                    </p>
                    <hr/>

                    <strong><i class="fa fa-book margin-r-5"></i>Reorder Stok Unit</strong>
                    <p class="text-muted">
                        {{ inventory.unitsOnOrder }}
                    </p>
                    <hr/>

                    <strong><i class="fa fa-book margin-r-5"></i>Safety Stok</strong>
                    <p class="text-muted">
                        {{ inventory.safetyStock }}
                    </p>
                    <hr/>

                    <strong><i class="fa fa-book margin-r-5"></i>Deskripsi</strong>
                    <p class="text-muted">
                        {{ inventory.description }}
                    </p>
                    <hr/>

                    <strong><i class="fa fa-book margin-r-5"></i>Gambar Tampilan</strong>
                    <p class="text-muted">
                        <img src="{{ asset('uploads/images/') }}{{ inventory.PicturePath }}" alt="Inventory Image" width="150px" height="150px">
                    </p>
                    <hr/>

                </div>

                <br/>

            </div>
        </div>
    </div>

{% endblock %}