{% extends 'base-inventory.html.twig' %}
            
{% block body %}

    <div class="row">
        <div class="col-md-12">
            <div class="box box-primary">
                <div class="box-header">
                    <h3 class="box-title">DASHBOARD &nbsp;&nbsp;&nbsp;</h3>
                </div>
                <hr/>
                <div class="box-body">
                    <div class="row">

                        <div class="col-xs-7">
                            {{ form_start(form, {'name': "formSearch"}) }}
                            <div class="row">
                                <div class="col-xs-5">
                                    {{ form_widget(form.fieldOptions) }}
                                </div>

                                <div class="col-xs-3">
                                    {{ form_widget(form.keyWord) }}
                                </div>
                                <div class="col-xs-4">
                                    {{ form_widget(form.search) }}
                                </div>
                            </div>
                            {{ form_end(form) }}
                        </div>
                    </div>
                    <br/>

                </div>

                <div class="box-header">
                    <h3 class="box-title">LIST INVENTORY</h3>
                </div>
                <div class="box-body table-responsive">
                    <table id="data_table1" class="table table-bordered table-hover">
                        <thead>
                        <tr>
                            <th>Nama</th>
                            <th>Kuantitas Per Unit</th>
                            <th>Harga Per Unit</th>
                            <th>Stok Unit</th>
                            <th>Reorder Stok Unit</th>
                            <th>Safety Stok</th>
                            <th>Action</th>
                        </tr>
                        </thead>
                        <tbody>
                        {% for inventory in inventories %}
                            <tr>
                                <td >{{ inventory.nama }}</td>
                                <td >{{ inventory.quantityPerUnit }}</td>
                                <td >{{ inventory.unitPrice }}</td>
                                <td >{{ inventory.unitsInStock }}</td>
                                <td >{{ inventory.unitsOnOrder }}</td>
                                <td >{{ inventory.safetyStock }}</td>
                                <td >
                                    <div class="item-actions">
                                        <a href="{{ path('inventory detail', { id: inventory.id }) }}" class="btn btn-sm btn-default">Detail</a>
                                        <a href="{{ path('inventory edit', { id: inventory.id }) }}" class="btn btn-sm btn-default">Edit</a>
                                        <a href="{{ path('inventory delete', { id: inventory.id }) }}" class="btn btn-sm btn-default" onclick="return show_confirm()">Delete</a>
                                    </div>
                                </td>
                            </tr>
                        {% else %}
                            <tr>
                                <td colspan="7" >No Data Found</td>
                            </tr>
                        {% endfor %}
                        </tbody>
                    </table>
                </div>

                <br/>

            </div>
        </div>
    </div>

{% endblock %}

{% block javascripts %}
    {{ parent() }}

    <script type="text/javascript">
        function show_confirm() {
            var c = confirm("Anda yakin ingin menghapus data ini ?");

            if (c) {
                return true;
            }
            else {
                return false;
            }
        }

    </script>
{% endblock %}
